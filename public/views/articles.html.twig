{% extends "layout.html.twig" %}

{% block content %}
    {% for article in articles %}
        <h3>{{ article.title }}</h3>
        <p><img src="{{ article.images.thumbnail.image }}"></p>
        <p>{{ article.content | striptags | slice(0, 500) }}</p>
        <hr>
    {% else %}
        <h2>No articles found.</h2>
    {% endfor %}
{% endblock %}
